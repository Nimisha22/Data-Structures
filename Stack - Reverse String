#include<stdio.h>
#include<stdlib.h>
#include<string.h>
#define MAX 25

struct stack {
  char stk[MAX];
  int top;
} s;

void push(char item) {
    if (s.top == (MAX - 1))
       printf ("Stack is Full\n");
    else {
       s.top = s.top + 1;
       s.stk[s.top] = item;
    }
}

char pop() {
      if(s.top == -1) {
            printf("Stack is Empty\n");
            exit(1);
      }
      return(s.stk[s.top--]);
}

int main() {
   int i = 0;
   char d, str[MAX];
   s.top = -1;
   printf("\nEnter a string : ");
   gets(str);

   for(; str[i] != '\0'; i++) {
       push(str[i]);
   }
   printf("\nReverse String is :");
   while(s.top > -1) {
      d = pop();
      printf("%c", d);
   }
   return 0;
}
